{% comment %} 
  Render complex nesting child-grandchild dropdown navmenu UI for desktop.
 
  Accepts: 
  - link: {Object} Link Object
 
  Usage:
  {% render 'desktop-menu-dropdown-nav', link: link %} 
{% endcomment %}

{% comment %} <ul class="dropdown-child hidden absolute bg-white border min-w-[200px] top-10 left-1/2 transform -translate-x-1/2 hover:block">
  	{% for child_link in link.links %}
  		 <li class="relative flex justify-between px-3 py-2 hover:bg-gray-100 child_nav_item">
  			<a class="block" href="{{ child_link.url }}">{{ child_link.title }}</a>
  			{% if child_link.links.size > 0 %}
  				{% render 'icon-chevron-right', class: 'w-5' %}
  			{% endif %}
  
  			<!-- dropdown grandchild -->
  			{% if child_link.links.size > 0 %}
  				<ul class="dropdown-grandchild hidden absolute bg-white border min-w-[200px] top-0 left-full">
  					{% for grandchild_link in child_link.links %}
  						<li class="relative block px-3 py-2 hover:bg-gray-100 child_nav_item">
  							<a href="{{ grandchild_link.url }}">{{ grandchild_link.title }}</a>
  						</li>
  					{% endfor %}
  				</ul>
  			{% endif %}
  		</li>
  		<div>
  			
  		</div>
  	{% endfor %}
</ul> {% endcomment %}


<div class="mega-submenu">
  <div class="mega-submenu-list">
    {% for child_link in link.links %}
      <div class="mega-submenu-item">
        
        {% if child_link.links.size > 0 %}
          <div>
			<a class="mega-submenu-link">{{ child_link.title }}</a>
            {% for grandchild_link in child_link.links %}
				<div>
					<a href="{{ grandchild_link.url }}">{{ grandchild_link.title }}</a>
				</div>
            {% endfor %}
          </div>
		{% else %}
			<a class="mega-submenu-link" href="{{ child_link.url }}">{{ child_link.title }}</a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
  <div class="mega-submenu-content">
    {% comment %} <h4>Click here to visit sell</h4> {% endcomment %}
  </div>
</div>